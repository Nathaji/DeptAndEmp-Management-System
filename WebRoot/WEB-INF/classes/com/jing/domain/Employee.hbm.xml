<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd.">

<hibernate-mapping package="com.jing.domain">
   <class name="Employee" table="employee">
       <id name="username" type="java.lang.String">
            <column name="username"></column>
            <generator class="native"></generator>
       </id>
      
      <property name="password" type="java.lang.String">
            <column name="password" length="10" not-null="true">
            </column>
      </property>
      
      <property name="isAdmin" type="java.lang.String">
            <column name="isAdmin" length="45" not-null="true">
            </column>
      </property>
      
      <property name="name" type="java.lang.String">
            <column name="name" length="45" not-null="true">
            </column>
      </property>
      
      <property name="sex" type="java.lang.String">
            <column name="sex" length="45" not-null="true">
            </column>
      </property>
      
      <property name="contact" type="java.lang.String">
            <column name="contact" length="45" not-null="true">
            </column>
      </property>
      
      <property name="position" type="java.lang.String">
            <column name="position" length="45" not-null="true">
            </column>
      </property>
      
      <many-to-one name="dept" class="Department" lazy="false">
          <column name="deptId"/>
      </many-to-one>
      
   </class>
</hibernate-mapping>