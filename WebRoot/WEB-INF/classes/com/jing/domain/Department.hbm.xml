<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.jing.domain">
   <class name="Department" table="department">
   
      <id name="deptNum" type="java.lang.Integer">
       <column name="deptNum"/>
         <generator class="native"/>
      </id>
      
      <property name="deptName" type="java.lang.String">
            <column name="deptName" length="45" not-null="true">
            </column>
      </property>
      
      <property name="deptInfo" type="java.lang.String">
            <column name="deptInfo" length="100" not-null="true">
            </column>
      </property>
      
      <set name="emps">
			<key column="deptId"/>
			<one-to-many class="Employee"/>
	  </set>
		
   </class>
</hibernate-mapping>